---
import '../styles/global.css';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
const currentPath = Astro.url.pathname;

const { title } = Astro.props;
---
<html lang="en">
    <head>
        <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />		
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content="Depot17 helps students change the world through technical projects.">


        <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
		
        <script type="module" src="/src/app.js" defer></script>
        <script type="module" src="/src/onload.js" defer></script>

		<title>{ title }</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

        <link href="https://fonts.googleapis.com/css2?family=Bytesized&display=swap" rel="stylesheet"><link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+128&display=swap" rel="stylesheet">
    </head>
   
    <body>
        <div class={`relative flex flex-col items-center justify-center max-w-screen overflow-hidden min-h-screen  ${ currentPath === "/" ? 'bg-beige change' : 'bg-beige'}`}>

            <Header  />
            <div class={` min-h-screen w-full ${ currentPath === "/" ? '' : 'mt-24'}`}>
                <slot />
            </div>
            <Footer />
        </div>

    </body>
</html>