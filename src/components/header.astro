---
const currentPath = Astro.url.pathname;
---

<header id="navbar" class={`z-[200] w-full top-0  ${
        currentPath === "/"
        ? 'absolute'
        : ''}`}>
    <nav class="nav-fixed lg:opacity-0 fixed w-full flex justify-between items-center h-14">

        <a href="#" class="h-full border-r-2 border-b-2 px-4 flex items-center justify-center pt-1 bg-beige/60">
            <span id="name" class={`font8 hover:opacity-50 transition-all duration-400 ease-in-out text-2xl font-bold whitespace-nowrap 
            ${ currentPath === "/"
             ? 'text-black' //settle on a color
             : 'text-black'}`}>
                DEPOT17</span>
        </a>

         <button data-collapse-toggle="navbar-default" type="button" class="aspect-[1/1] bg-beige/60 flex items-center justify-center border-l-2 border-b-2 h-full">
            <span class="sr-only">Open main menu</span>
            <svg width="32" height="22" viewBox="0 0 32 22" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect y="9" width="32" height="4" fill="#352922"/>
            <rect width="32" height="4" fill="#352922"/>
            <rect y="18" width="32" height="4" fill="#352922"/>
            </svg>


        </button>


    </nav>
    
    <nav class="w-full hidden md:inline-flex flex bg-transparent justify-between 
    items-start md:items-center px-4 xs:pr-10 text-lg box-border h-14">
        <a href="#" class="h-full border-r-2 pr-4 flex items-center justify-center pt-1">
            <span id="name" class={`font8 hover:opacity-50 transition-all duration-400 ease-in-out text-2xl font-bold whitespace-nowrap 
            ${ currentPath === "/"
             ? 'text-black' //settle on a color
             : 'text-black'}`}>
                DEPOT17</span>
        </a>
         
        
        <ul class="flex items-center justify-center gap-y-10 h-full border-l-2 px-3 pt-4 pb-3">
            <li>
                <a href="/" target="_self" class="font-medium block px-3 transition-all duration-400 ease-in-out">Home</a>
            </li>
    
            <li class="hidden md:inline">/</li>

            <li>
                <a href="/get_started" target="_self" class="font-medium block px-3 transition-all duration-400 ease-in-out">Get Started</a>
                <!-- <div class="hidden group-hover:block absolute z-[100] bg-dbrown px-1 py-1  space-y-1 rounded-xl ">

                    <a href="#" target="_self" class="block hover:bg-transp px-2 rounded-lg transition-all duration-400 ease-in-out text-lred font-semibold">
                        Track One
                    </a>
                    <a href="#" target="_self" class="block hover:bg-transp px-2  pr-8  rounded-lg transition-all duration-400 ease-in-out text-lred font-semibold">
                        Track Two
                    </a>
                </div>
                    -->
            </li>
            <!-- <li><p>/</p></li>
            <li>
                <a href="/resources" target="_self" class={`nav-item block px-3 text-black ${
                    currentPath === "/resources" 
                    ? "text-green font-semibold"   
                    : currentPath === "/" 
                
                    }`}>Resources</a>
            </li> -->
            <li>
                <a href="#" class="bg-dbrown text-lgreen rounded-full min-h-10 px-4 py-2 -mr-2 md:text-lblue">
                    Shop 
                </a>
            </li>
            <li>
                <a href="#" class="bg-dbrown text-lgreen rounded-full min-h-10 px-4 py-2 -mr-2 md:text-lblue">
                    Donate 
                </a>
            </li>
        </ul>
    </nav>  
    <hr>


    <nav class="w-screen relative">
        <div class="fixed top-0 flex justify-end bg-dbrown/80 w-screen h-screen p-1 xs:p-6" id="navbar-default">
        <div class="w-full h-full lg:max-w-140  bg-beige rounded-xl p-2">
            <div class="border-4 border-dbrown rounded-lg w-full h-full flex flex-col">
                
                <div class="h-10 w-full flex justify-end items-center">
                    <button data-collapse-toggle="navbar-default" type="button" class="px-3.5 border-l-2 h-full">
                        <span class="sr-only">Open main menu</span>
                        <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect x="2.82812" width="25" height="4" transform="rotate(45 2.82812 0)" fill="#352922"/>
