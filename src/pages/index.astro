<BaseLayout title={title}>
	
	<section id="landing" class="w-screen h-screen bg-[url('/images/spotlight.webp')] bg-no-repeat 
		spotlight-lg bg-[center_top_-4rem] flex flex-col items-center justify-center gap-y-4 pt-[90px] lg:py-20 box-border relative">
		
		<div class="hidden lg:block dragme col-start-2 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 overflow-hidden ">
			<Three client:load />
